<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/main_bg"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:animateLayoutChanges="true"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_bg"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@android:color/white"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        >

      <LinearLayout
          android:id="@+id/layout_setting"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:orientation="vertical"
          android:padding="16dp"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="8dp"
            >

          <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_centerVertical="true"
              android:layout_gravity="center_vertical"
              android:background="@android:color/white"
              android:src="@mipmap/ic_blue_remote"
              />

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_weight="1"
              android:background="@android:color/white"
              android:orientation="vertical"
              >

            <TextView
                android:id="@+id/activity_control_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/activity_control_device_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/activity_control_device_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="已鉴权"
                android:textColor="@color/main_bg"
                android:textSize="14sp"
                />

          </LinearLayout>


          <TextView
              android:id="@+id/activity_control_edit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:background="@android:color/white"
              android:text="编辑"
              android:textColor="@color/main_bg"
              android:textSize="14sp"
              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            >
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:orientation="vertical"
              >
            <TextView
                android:id="@+id/activity_control_success_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成功"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:orientation="vertical"
              >
            <TextView
                android:id="@+id/activity_control_fail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="失败"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:orientation="vertical"
              >
            <TextView
                android:id="@+id/activity_control_time_out_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超时"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        >

      <EditText
          android:id="@+id/activity_mac_input"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          />

      <TextView
          android:id="@+id/activity_btn_status"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginLeft="6dp"
          android:text="未连接"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        >

      <Button
          android:id="@+id/activity_btn_connect"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/shap_main_selected_item_bg"
          android:text="连接"
          />

      <Button
          android:id="@+id/btn_disconnect"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="断开连接"
          />
    </LinearLayout>
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:columnCount="4"
        android:rowCount="2"
        >

      <LinearLayout
          android:id="@+id/btn_opendoor"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:background="@drawable/btn_selector"
          android:gravity="center"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/door_open_selector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="开门"
            android:textColor="@android:color/black"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/btn_closedoor"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:background="@drawable/btn_selector"
          android:gravity="center"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/door_close_selector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="关门"
            android:textColor="@android:color/black"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/btn_poweron"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:background="@drawable/btn_selector"
          android:gravity="center"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/power_on_selector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="供电"
            android:textColor="@android:color/black"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/btn_poweroff"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:background="@drawable/btn_selector"
          android:gravity="center"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/power_off_selector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="断电"
            android:textColor="@android:color/black"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/btn_opendoor_poweron"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:background="@drawable/btn_selector"
          android:gravity="center"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/power_on_open_selector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="开门供电"
            android:textColor="@android:color/black"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/btn_closedoor_poweroff"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:background="@drawable/btn_selector"
          android:gravity="center"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/power_off_close"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="关门断电"
            android:textColor="@android:color/black"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/btn_find_car"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:background="@drawable/btn_selector"
          android:gravity="center"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/find_car_selector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="寻车"
            android:textColor="@android:color/black"
            />
      </LinearLayout>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        >

      <TextView
          android:id="@+id/result_success"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="成功：0"
          />

      <TextView
          android:id="@+id/result_fail"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="失敗：0"
          />

      <TextView
          android:id="@+id/result_timeout"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="超時：0"
          />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        />
    <LinearLayout
        android:id="@+id/activity_action_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/activity_btn_start"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/normal_selector"
          android:text="压力测试"
          />
      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@android:color/darker_gray"
          />
      <Button
          android:id="@+id/activity_btn_pause"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/normal_selector"
          android:text="蓝牙车务"
          />
      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@android:color/darker_gray"
          />
      <Button
          android:id="@+id/activity_btn_stop"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/normal_selector"
          android:text="停止"
          android:visibility="gone"
          />
    </LinearLayout>
  </LinearLayout>
</ScrollView>
